<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.ssafy.enjoytrip.member.model.mapper.MemberMapper">

	<resultMap id="memberMap" type="MemberDto">
		<result column="user_id" property="userId" />
		<result column="username" property="username" />
		<result column="password" property="password" />
		<result column="email" property="email" />
		<result column="type" property="type" />
		<result column="registered_time" property="registeredTime" />
		<result column="profile_image" property="profileImage" />
	</resultMap>

	<select id="duplicateUsernameCheck" parameterType="String"
		resultType="int">
		select count(username)
		from member
		where username =
		#{username}
	</select>

	<select id="findById" parameterType="int" resultMap="memberMap">
		select
		user_id, password, username, email, type, registered_time
		from
		member
		where
		user_id = #{userId}
	</select>

	<select id="findByUsername" parameterType="String"
		resultMap="memberMap">
		select
		user_id, username, password, email, type, registered_time
		from
		member
		where
		username = #{username}
	</select>

	<insert id="insertMember" parameterType="MemberDto"
		useGeneratedKeys="true" keyProperty="userId">
		insert into member (username, password, email, type, registered_time)
		values (#{username}, #{password}, #{email}, #{type}, now())
	</insert>

	<update id="updateMember" parameterType="MemberDto">
		update
		member
		<trim prefix="set" suffixOverrides=",">
			<if test="password != null and password != ''">
				password = #{password},
			</if>
			<if test="email != null and email != ''">
				email = #{email},
			</if>
		</trim>
		where
		user_id = #{userId}
	</update>

	<delete id="deleteMember" parameterType="int">
		delete from member
		where
		user_id = #{userId}
	</delete>
</mapper>